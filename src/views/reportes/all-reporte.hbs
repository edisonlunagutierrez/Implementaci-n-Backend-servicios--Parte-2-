<div class="row">
    {{#each reportes}}<!--Por cada uno de los reportes que este recibiendo del servidor empieza a recorrerlas-->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between aling-items-center">
                        {{localidad}} <a href="/reportes/edit/{{_id}}"><i class="fa-solid fa-pen-to-square"></i></a>
                    </h4>
                    <p>{{situacionRiesgo}}</p>
                    <form action="/reportes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-block btn-sm">
                            Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>